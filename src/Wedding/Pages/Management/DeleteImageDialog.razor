@using MudBlazor
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="@Color" OnClick="Delete">@ButtonText</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public Color Color { get; set; }

    private void Delete()
    {
        // Close the dialog with a positive result
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        // Close the dialog with a negative result
        MudDialog.Cancel();
    }
}
